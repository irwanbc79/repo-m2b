<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;

// Tambahkan di bagian atas class setelah use statements
use SimpleSoftwareIO\QrCode\Facades\QrCode;
use Illuminate\Support\Facades\Storage;

class Shipment extends Model
{
    use HasFactory;

    protected $fillable = [
        'customer_id',
        'awb_number',
        'origin',
        'destination',
        'service_type',
        'shipment_type',
        'container_mode',
        'container_info',
        'pieces',
        'package_type',
        'weight',
        'volume',
        'status',
        'lane_status', // Pastikan ini tetap ada
        'estimated_arrival',
        'notes'
    ];

    /**
     * Relasi ke Customer (Milik Siapa)
     */
    public function customer()
    {
        return $this->belongsTo(Customer::class);
    }
    
    // Tambahkan method-method ini di dalam class Shipment

public function fieldPhotos()
{
    return $this->hasMany(FieldPhoto::class);
}

public function getQrCodeAttribute()
{
    return QrCode::size(300)
        ->format('svg')
        ->margin(2)
        ->errorCorrection('H')
        ->generate($this->shipment_number);
}

public function getQrCodeUrlAttribute()
{
    $qrPath = "qrcodes/{$this->shipment_number}.svg";
    
    if (!Storage::disk('public')->exists($qrPath)) {
        Storage::disk('public')->put($qrPath, $this->qr_code);
    }
    
    return Storage::disk('public')->url($qrPath);
}

public function getQrCodeDownloadUrlAttribute()
{
    return route('field-documentation.qr-download', $this->shipment_number);
}

    /**
     * Relasi ke Dokumen (Banyak Dokumen)
     */
    public function documents()
    {
        return $this->hasMany(Document::class);
    }

    /**
     * Relasi ke Invoice (Satu Shipment punya Satu Invoice)
     * INI YANG MENYEBABKAN ERROR SEBELUMNYA KARENA HILANG
     */
    public function invoice()
    {
        return $this->hasOne(Invoice::class);
    }
    
    public function invoices()
    {
        return $this->hasMany(Invoice::class);
    }

    // Relasi ke Job Costs (One Shipment has Many Costs)
    // Ini juga penting agar Job Costing jalan
    public function jobCosts()
    {
        return $this->hasMany(JobCost::class);
    }
}