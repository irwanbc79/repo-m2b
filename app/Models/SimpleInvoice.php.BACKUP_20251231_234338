<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Factories\HasFactory;
use Illuminate\Database\Eloquent\Model;
use Illuminate\Database\Eloquent\SoftDeletes;
use Illuminate\Database\Eloquent\Relations\HasMany;
use Illuminate\Database\Eloquent\Relations\BelongsTo;

class SimpleInvoice extends Model
{
    use HasFactory, SoftDeletes;

    protected $fillable = [
        'invoice_number',
        'invoice_date',
        'customer_id',
        'customer_name',
        'currency',
        'subtotal',
        'total',
        'terbilang',
        'notes',
        'status',
        'pdf_path',
        'created_by',
    ];

    protected $casts = [
        'invoice_date' => 'date',
        'subtotal' => 'decimal:2',
        'total' => 'decimal:2',
    ];

    protected $appends = ['formatted_total', 'status_badge'];

    /**
     * Boot method - Auto generate invoice number
     */
    protected static function boot()
    {
        parent::boot();

        static::creating(function ($invoice) {
            if (empty($invoice->invoice_number)) {
                $invoice->invoice_number = static::generateInvoiceNumber();
            }
            
            if (empty($invoice->terbilang)) {
                $invoice->terbilang = static::numberToWords($invoice->total, $invoice->currency);
            }
        });
    }

    /**
     * Relationships
     */
    public function items(): HasMany
    {
        return $this->hasMany(SimpleInvoiceItem::class)->orderBy('sort_order');
    }

    public function customer(): BelongsTo
    {
        return $this->belongsTo(Customer::class);
    }

    public function creator(): BelongsTo
    {
        return $this->belongsTo(User::class, 'created_by');
    }

    /**
     * Accessors
     */
    public function getFormattedTotalAttribute(): string
    {
        if ($this->currency === 'USD') {
            return '$' . number_format($this->total, 2);
        }
        return 'Rp ' . number_format($this->total, 0, ',', '.');
    }

    public function getStatusBadgeAttribute(): string
    {
        return match($this->status) {
            'paid' => '<span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">PAID</span>',
            'unpaid' => '<span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">UNPAID</span>',
            'cancelled' => '<span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">CANCELLED</span>',
            default => '<span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">UNKNOWN</span>',
        };
    }

    public function getDisplayNameAttribute(): string
    {
        return $this->customer_name ?? $this->customer?->name ?? 'N/A';
    }

    /**
     * Generate invoice number: INV{seq}-M2B/{roman-month}/{year}
     */
    public static function generateInvoiceNumber(): string
    {
        $year = now()->year;
        $month = now()->month;
        $romanMonth = static::toRoman($month);
        
        // Get last sequence for current year
        $lastInvoice = static::whereYear('created_at', $year)
            ->orderBy('id', 'desc')
            ->first();
        
        $sequence = $lastInvoice ? (int)substr($lastInvoice->invoice_number, 3, 3) + 1 : 1;
        
        return sprintf('INV%03d-M2B/%s/%d', $sequence, $romanMonth, $year);
    }

    /**
     * Convert number to Roman numerals (months I-XII)
     */
    private static function toRoman(int $num): string
    {
        $romans = ['', 'I', 'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX', 'X', 'XI', 'XII'];
        return $romans[$num] ?? 'I';
    }

    /**
     * Convert number to Indonesian words
     */
    public static function numberToWords(float $number, string $currency = 'IDR'): string
    {
        $number = floor($number);
        
        if ($number == 0) {
            return $currency === 'IDR' ? 'Nol Rupiah' : 'Zero Dollars';
        }

        $words = [
            '', 'Satu', 'Dua', 'Tiga', 'Empat', 'Lima', 'Enam', 'Tujuh', 'Delapan', 'Sembilan',
            'Sepuluh', 'Sebelas'
        ];

        if ($number < 12) {
            $result = $words[$number];
        } elseif ($number < 20) {
            $result = $words[$number - 10] . ' Belas';
        } elseif ($number < 100) {
            $result = $words[floor($number / 10)] . ' Puluh ' . $words[$number % 10];
        } elseif ($number < 200) {
            $result = 'Seratus ' . static::numberToWords($number - 100, '');
        } elseif ($number < 1000) {
            $result = $words[floor($number / 100)] . ' Ratus ' . static::numberToWords($number % 100, '');
        } elseif ($number < 2000) {
            $result = 'Seribu ' . static::numberToWords($number - 1000, '');
        } elseif ($number < 1000000) {
            $result = static::numberToWords(floor($number / 1000), '') . ' Ribu ' . static::numberToWords($number % 1000, '');
        } elseif ($number < 1000000000) {
            $result = static::numberToWords(floor($number / 1000000), '') . ' Juta ' . static::numberToWords($number % 1000000, '');
        } else {
            $result = static::numberToWords(floor($number / 1000000000), '') . ' Milyar ' . static::numberToWords($number % 1000000000, '');
        }

        $result = trim(preg_replace('/\s+/', ' ', $result));
        
        if ($currency === 'IDR') {
            return $result . ' Rupiah';
        } elseif ($currency === 'USD') {
            return $result . ' Dollars';
        }
        
        return $result;
    }

    /**
     * Scopes
     */
    public function scopeUnpaid($query)
    {
        return $query->where('status', 'unpaid');
    }

    public function scopePaid($query)
    {
        return $query->where('status', 'paid');
    }

    public function scopeThisMonth($query)
    {
        return $query->whereMonth('invoice_date', now()->month)
                    ->whereYear('invoice_date', now()->year);
    }

    public function scopeThisYear($query)
    {
        return $query->whereYear('invoice_date', now()->year);
    }
}
