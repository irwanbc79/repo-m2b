<?php

namespace App\Livewire\Admin;

use Livewire\Component;
use Livewire\WithPagination;
use App\Models\User;
use App\Models\Customer;
use Illuminate\Support\Facades\Hash;
use Illuminate\Support\Facades\DB;
use Illuminate\Support\Facades\Auth;

class CustomerManagement extends Component
{
    use WithPagination;

    public $search = '';
    public $isModalOpen = false;
    public $isEditing = false;
    public $customerId = null;

    // Form Data Lengkap
    public $email, $password, $name;
    public $role = 'customer';
    public $customer_code, $company_name, $phone, $address, $city;
    public $npwp, $warehouse_address;
    public $pic_name; // Tambahkan properti ini jika belum ada

    // --- LOGIC TAMBAHAN: CREATE METHOD ---
    // Ini yang hilang sebelumnya dan menyebabkan error
    public function create()
    {
        $this->resetValidation();
        $this->resetForm();
        $this->isEditing = false;
        $this->isModalOpen = true;
        
        // Generate kode baru saat membuka modal create
        $this->customer_code = $this->generateSmartCode($this->role);
    }

    public function updatedRole($value)
    {
        if ($this->isEditing) return;
        $this->customer_code = $this->generateSmartCode($value);
    }

    public function openModal() {
        // Alias untuk create, jaga-jaga jika ada tombol lama yg panggil ini
        $this->create();
    }

    public function closeModal() { $this->isModalOpen = false; }

    public function resetForm() {
        $this->email = ''; $this->password = ''; $this->name = '';
        $this->role = 'customer'; 
        $this->company_name = ''; $this->phone = ''; $this->address = ''; $this->city = '';
        $this->npwp = ''; $this->warehouse_address = '';
        $this->pic_name = ''; // Reset PIC Name
        $this->customer_code = $this->generateSmartCode('customer');
    }

    public function generateSmartCode($roleType)
    {
        $count = Customer::count() + 1;
        $number = str_pad($count, 4, '0', STR_PAD_LEFT);
        if (in_array($roleType, ['admin', 'manager', 'staff', 'finance', 'shipment'])) {
            return 'M2B-' . $number;
        }
        return 'CUS-' . $number;
    }

    // --- SATUKAN LOGIC STORE & UPDATE MENJADI SAVE ---
    public function save() {
        
        // Aturan Validasi Dasar
        $rules = [
            'name' => 'required',
            'email' => 'required|email|unique:users,email,' . ($this->customerId ? Customer::find($this->customerId)->user_id : ''),
            'role' => 'required|in:admin,manager,staff,finance,shipment,customer', 
            'company_name' => 'required',
            // 'customer_code' => 'required|unique:customers,customer_code,' . $this->customerId, // AUTO-GENERATED
        ];

        // Password required only on create
        if (!$this->isEditing) {
            $rules['password'] = 'required|min:6';
        }

        $this->validate($rules);

        DB::transaction(function () {
            if ($this->isEditing) {
                // --- UPDATE LOGIC ---
                $customer = Customer::find($this->customerId);
                $userData = ['name' => $this->name, 'role' => $this->role, 'email' => $this->email];
                if (!empty($this->password)) $userData['password'] = Hash::make($this->password);
                
                $customer->user->update($userData);
                
                $customer->update([
                    'company_name' => $this->company_name,
                    'phone' => $this->phone,
                    'npwp' => $this->npwp,
                    'address' => $this->address,
                    'warehouse_address' => $this->warehouse_address,
                    'city' => $this->city,
                ]);
                
                session()->flash('message', 'Data customer berhasil diperbarui!');

            } else {
                // --- CREATE LOGIC ---
                $user = User::create([
                    'name' => $this->name,
                    'email' => $this->email,
                    'password' => Hash::make($this->password),
                    'role' => $this->role,
                ]);

                // Auto-generate customer code
                $customerCode = Customer::generateCustomerCode();
    
                Customer::create([
                    'user_id' => $user->id,
                    'customer_code' => $customerCode,
                    'company_name' => $this->company_name,
                    'phone' => $this->phone,
                    'npwp' => $this->npwp,
                    'address' => $this->address,
                    'warehouse_address' => $this->warehouse_address,
                    'city' => $this->city,
                ]);
                
                session()->flash('message', 'Customer berhasil ditambahkan! Code: ' . $customerCode);
            }
        });

        $this->closeModal();
    }

    // --- ALIAS UNTUK KOMPATIBILITAS TOMBOL LAMA ---
    public function store() { $this->save(); }
    public function update() { $this->save(); }

    public function edit($id) {
        $customer = Customer::with('user')->find($id);
        if ($customer) {
            $this->customerId = $id;
            $this->name = $customer->user->name ?? '';
            $this->email = $customer->user->email ?? '';
            $this->role = $customer->user->role ?? 'customer';
            
            $this->customer_code = $customer->customer_code;
            $this->company_name = $customer->company_name;
            $this->phone = $customer->phone;
            $this->npwp = $customer->npwp;
            $this->address = $customer->address;
            $this->warehouse_address = $customer->warehouse_address;
            $this->city = $customer->city;
            
            $this->isEditing = true;
            $this->isModalOpen = true;
        }
    }

    // --- FUNGSI DELETE AMAN ---
    public function delete($id) {
        try {
            $customer = Customer::find($id);
            if (!$customer) {
                session()->flash('error', 'Customer tidak ditemukan.');
                return;
            }

            // CEK RELASI
            $hasInvoices = DB::table('invoices')->where('customer_id', $id)->exists();
            $hasShipments = DB::table('shipments')->where('customer_id', $id)->exists();

            if ($hasInvoices || $hasShipments) {
                session()->flash('error', 'GAGAL: Customer ini memiliki riwayat transaksi (Invoice/Shipment) dan tidak dapat dihapus.');
                return;
            }

            // PROSES HAPUS
            DB::transaction(function () use ($customer) {
                $user = $customer->user;
                $customer->delete(); 
                if($user) $user->delete(); 
            });

            session()->flash('message', 'Customer berhasil dihapus permanen.');

        } catch (\Exception $e) {
            session()->flash('error', 'Terjadi kesalahan sistem: ' . $e->getMessage());
        }
    }

    public function render()
    {
        $customers = \App\Models\Customer::with('user')
            ->where(function($query) {
                $term = '%' . $this->search . '%';
                $query->where('company_name', 'like', $term)
                      ->orWhere('customer_code', 'like', $term)
                      ->orWhere('phone', 'like', $term)
                      ->orWhereHas('user', function($u) use ($term) {
                          $u->where('email', 'like', $term)
                            ->orWhere('name', 'like', $term);
                      });
            })
            ->orderBy('created_at', 'desc')
            ->paginate(10);

        return view('livewire.admin.customer-management', [
            'customers' => $customers
        ])->layout('layouts.admin');
    }
}